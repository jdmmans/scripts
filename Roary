#SBATCH --time=0-4:00:00

# check that the script is launched with sbatch
if [ "x$SLURM_JOB_ID" == "x" ]; then
   echo "You need to submit your job to the queuing system with sbatch"
   exit 1
fi

#modules
module load Roary/3.12.0-spartan_intel-2017.u2-Perl-5.26.0

# like a for loop but better 
cd /data/cephfs/punim0599/Jesse/emm75/M75_jesse/fa
ls -R | while read line; do
  if [[ "$line" == *".gff"* ]] ; then
    line=${line:0:-4}
fi

#variable shortening
mkdir /data/cephfs/punim0599/Jesse/emm75/M75_jesse/Roary
out='/data/cephfs/punim0599/Jesse/emm75/M75_jesse/Roary'

#prokka called the line
prokka -output_dir $out /data/cephfs/punim0599/Jesse/emm75/M75_jesse/prokka/${line}/${line}.gff

done
