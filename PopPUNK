module load hdbscan/0.8.18-intel-2017.u2-Python-3.6.4
module load matplotlib/2.1.2-intel-2017.u2-Python-3.6.4
module load networkx/2.2-intel-2017.u2-Python-3.6.4
module load numba/0.36.2-intel-2017.u2-Python-3.6.4
module load scikit-learn/0.20.0-intel-2017.u2-Python-3.6.4
module load sharedmem/0.3.5-intel-2017.u2-Python-3.6.4
module load GCC
module load Python/2.7.9-GCC-4.9.2
# variables used 
out="/data/cephfs/punim0599/Jesse/emm75/Poppunk"
cd $out

# popPUNK
poppunk --easy-run --r-files- --min-k 20 /data/cephfs/punim0599/Jesse/emm75/poppunklist.txt --output poppunk_db
